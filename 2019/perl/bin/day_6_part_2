#!/usr/bin/env perl

use strict;
use warnings;
use feature 'say';
use File::Slurp qw( read_file );
use File::ShareDir qw( dist_file );

use Advent::OrbitMap;

my $orbits = read_file( dist_file( 'Advent', 'day-6.txt' ) );

my $m = Advent::OrbitMap->new( spec => $orbits );
say "$0: ", $m->get_orbital_transfers( 'YOU', 'SAN' );
