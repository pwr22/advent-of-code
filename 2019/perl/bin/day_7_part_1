#!/usr/bin/env perl

use strict;
use warnings;
use feature 'say';
use File::Slurp qw( read_file );
use File::ShareDir qw( dist_file );

use Advent::SignalAmplifier;

my $prog = read_file(dist_file('Advent', 'day-7.txt'));
chomp $prog;

my $s = Advent::SignalAmplifier->new( intcode => $prog );
say "$0: ", $s->find_optimal_phases();
