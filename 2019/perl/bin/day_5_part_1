#!/usr/bin/env perl

use strict;
use warnings;
use feature 'say';
use autodie;
use File::ShareDir 'dist_file';
use File::Slurp 'read_file';

use Advent::Intcode;

my $prog = read_file(dist_file('Advent', 'day-5.txt'));
chomp $prog;

my $input = "1\n";
open my $fh, '<', \$input;
my $s = Advent::Intcode->new( state => $prog, input => $fh, output => \*STDOUT );

print "$0: ";
$s->run();
